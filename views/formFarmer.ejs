<div class="d-flex justify-content-center align-items-center container ">

    <div class="row ">
      <form action="/farmer" method="post">
        <div class="form-group">
          <input id="lon" class="inp" type="text" name="longitude" value="" style="display:none">
          <input id="lat" class="inp" type="text" name="latitude" value="" style="display:none">
        </div>

          <div class="form-group">
